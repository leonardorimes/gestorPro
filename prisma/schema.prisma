enum TipoPessoa {
  FISICA
  JURIDICA
}

enum ServiceOrderStatus {
  OPEN
  IN_PROGRESS
  COMPLETED
  CANCELED
}




generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String
  password  String
  createdAt DateTime @default(now())

  Clients Client[]
  services Service[]
  orders ServiceOrder[]

  @@map("users")
}

model Client {
  id         String   @id @default(uuid())
  name       String
  email      String
  tipo       TipoPessoa @default(FISICA)
  documento  String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userId     String
  user       User @relation(fields: [userId], references: [id])

  serviceOrders ServiceOrder[]

  @@unique([email, userId])
  @@unique([documento, userId])
  @@index([userId])
  @@map("clients")
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  serviceType String   @map("service_type")
  price       Decimal  @db.Decimal(10,2)
  isActive Boolean @default(true) @map("is_active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  serviceOrders ServiceOrder[]

  @@unique([name, userId])
  @@index([userId])
  @@map("services")
}

model ServiceOrder {
  id          String   @id @default(uuid())

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

 clientId  String
  client    Client   @relation(fields: [clientId], references: [id])

  serviceId String
  service   Service  @relation(fields: [serviceId], references: [id])

  serviceName   String
  servicePrice  Decimal @db.Decimal(10,2)

  status     ServiceOrderStatus @default(OPEN)

  startedAt  DateTime?
  finishedAt DateTime?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt



@@index([userId, status])
@@index([userId, createdAt])
  @@index([userId])
  @@index([clientId])
  @@index([serviceId])
  @@index([status])
  @@map("service_orders")

}
